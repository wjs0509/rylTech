<script>
    var menu = $(".nav.navbar-nav").attr("data-menu");
    for (var i = 0; i < $(".nav.navbar-nav li").length; i++) {
        if ($(".nav.navbar-nav li").eq(i).attr("id") == menu) {
            if ($(".nav.navbar-nav li").eq(i).parent("ul").hasClass("treeview-menu")) {
                $(".nav.navbar-nav li").eq(i).parent("ul").parents("li").addClass("liActive");
                $(".nav.navbar-nav li").eq(i).parents(".subNav").css("display", "block");
                $(".nav.navbar-nav li").eq(i).addClass("active");
            } else {
                $(".nav.navbar-nav li").eq(i).addClass("liActive");
            }
        }
    }
</script>
